@import "flickity/css/flickity.css"
@import "magnific-popup/dist/magnific-popup.css"

.container
  background-color beige-two
  padding: 70px 0 80px

  @media (max-width: $breakpoint-sm - 1)
    padding: 20px 0 40px

  :global(.dot)
    width: 12px
    height: 12px
    background-color warm-grey
    anim()

    &:global(.is-selected)
      background-color scarlet

.title
  font-size: 3em
  text-align: center
  margin-bottom: 70px

  @media (max-width: $breakpoint-sm - 1)
    font-size: 2em

.popup
  display: block

.items
  display: block

.item
  width: 100%

.image-wrapper
  text-align: center

.image
  display: inline-block
  position: relative

.photo
  border-radius: 3px
  display: block
  height: auto

.avatar
  position: absolute
  left: 100%
  top: 50%
  margin-left: -50px
  margin-top: -50px
  border: 2px solid white
  border-radius: 50%
  box-shadow -3px 9px 17px 0 rgba(0, 0, 0, 0.25)

  @media (max-width: $breakpoint-md)
    margin-left: -90px

.name
  margin-bottom: 20px

.text
  font-weight: 300

.link
  display: inline-block
  margin-top: 20px
  font-size: .8em
  color nice-blue
  text-decoration: underline

  &:hover
    text-decoration: none

.video
  &:after
    content: ''
    display: block
    position: absolute
    background: url(sprites/sprite-video.svg)
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    anim()

  &:hover:after
    opacity: .8