.wrapper
  position: relative
  max-width: 460px
  margin: 0 auto
  background: white
  border: 1px solid #979797
  border-radius: 4px

  :global(.mfp-close)
    top: 13px
    width: 70px
    height: 70px

    &:hover
      color: #D0011B

.header
  height: 92px
  padding-left: 65px
  border-bottom solid 1px #dfdfdf

  &:before
    content: ''
    height: 100%
    vc()

  @media (max-width: 460px - 1)
    padding-left: 20px
    height: 60px

.title
  vc()
  font-size: 1.3em
  font-weight: 600

.body
  padding: 22px 65px

  @media (max-width: 460px - 1)
    padding 15px 20px

.selected
  font-weight 500

.text
  font-weight 300
  color greyish-brown-two
  margin-bottom: 39px

.input-wrapper
  position: relative
  &:before
    content: '+7'
    border-right: solid 1px #dfdfdf
    position: absolute
    color brownish-grey
    font-size: .9em
    line-height: 55px
    height: 100%
    width: 60px
    text-align: center
    pointer-events: none

.input
  font-size: 1em
  line-height: 1.2em
  padding: 16px 20px 16px 80px
  display: block
  border-radius 3px
  border solid 1px #dfdfdf
  margin-bottom: 30px
  width: 100%

.button
  text-align: center

.opener,
.car,
.city
  opacity: 1
