.container
  padding: 60px 0

  @media (max-width: $breakpoint-sm - 1)
    padding: 20px 0

.title
  font-size: 3em
  margin-bottom: 10px
  text-align: center

  @media (max-width: $breakpoint-sm - 1)
    font-size: 2em

.subtitle
  font-size: 1.5em
  text-align: center
  max-width: 70%
  margin: 0 auto 45px

  @media (max-width: $breakpoint-lg)
    max-width: none

    @media (max-width: $breakpoint-sm - 1)
      font-size: 1.2em


.item
  margin-bottom: 20px

.item_active
  .answer
    max-height: none

.question
  font-size: 1.1em
  margin-bottom: 8px
  cursor: pointer
  anim()

  &:hover
    color scarlet-three
    text-decoration: underline

.answer
  opacity: .7
  font-weight: 300
  max-height: 0
  overflow: hidden
  anim()

.text
  display: block