.container
  margin-bottom: 3em
  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: 2em

.title
  font-size: 3em
  line-height: 1.2
  font-weight: 500
  text-align: center
  max-width: 760px
  margin: 0 auto 1em

  @media (max-width: $breakpoint-sm - 1)
    font-size: 2em

.video
  display: block
  position: relative
  max-width: 760px
  margin: 0 auto
  background: #ffffff
  border-radius: 2px

  &:before
    display: block
    content: ""
    padding-top: 56.25%

.frame
  margin: 12px 19px
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  @media (max-width: $breakpoint-sm - 1)
    margin: 0

  iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 2px

