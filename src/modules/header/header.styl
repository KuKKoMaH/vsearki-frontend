$height = 60px
.header
  position fixed
  height $height
  width: 100%
  background-color greyish-brown
  color: white
  z-index: 100

.menu-wrapper
  @media (max-width: $breakpoint-sm - 1)
    display: none
    position: fixed
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: rgba(black, .8)
    z-index: 1000

  &.menu-wrapper-active
    display: inline-block

.row
  height: 100%

  &:before
    content: ''
    vc()
    height: 100%

.logo
  float: left
  display: block
  background: url(sprites/sprite-logo.svg)
  margin-top: 10px

  @media (max-width: $breakpoint-sm - 1)
    float: none
    margin: 10px auto 20px

.menu
  margin: 0 0 0 140px
  padding: 0
  text-align: justify
  &:after
    content ''
    display: inline-block
    visibility: hidden
    overflow: hidden
    width: 100%

  @media (max-width: $breakpoint-sm - 1)
    margin: 0

.menu-item
  font-size: .8em
  line-height: $height

  @media (max-width: $breakpoint-md) and (min-width: $breakpoint-sm)
    font-size: .6em

  @media (max-width: $breakpoint-sm - 1)
    display: block
    font-size: 1.5em
    text-align: center

.menu-item-inner
  display: inline-block
  border-bottom: 3px solid transparent
  text-decoration: none
  anim()
  &:hover, .active
    border-bottom: 3px solid brick

.phone
  background-color greyish-brown-two
  height: $height
  font-weight: 600
  font-size: 1.1em
  text-align: center

  &:after
    content: ''
    vc()
    height: 100%

  &:before
    content: ''
    vc()
    background-image: url(sprites/sprite-phone.svg)
    margin-right: 14px

  @media (max-width: $breakpoint-md - 1)
    font-size: .8em

  @media (max-width: $breakpoint-sm - 1)
    width: 200px
    float: right

.phone-number
  vc()

.hamburger
  display: none
  float: left
  background: url(sprites/sprite-hamburger.svg)
  margin-top: 15px

  @media (max-width: $breakpoint-sm - 1)
    vc()

.close
  display: none
  position: absolute
  right: 10px
  top: 10px
  padding: 15px
  z-index: 1

  @media (max-width: $breakpoint-sm - 1)
    display: block

.close-icon
  background: url(sprites/sprite-close-menu.svg)
