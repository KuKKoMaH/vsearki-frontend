.container
  padding: 246px 0 90px
  background-color beige-two
  overflow: hidden
  position: relative

  @media (max-width: $breakpoint-sm - 1)
    padding-bottom: 20px

  &:before
    content: ''
    position: absolute
    display: block
    background: url(modules/about/car.jpg)
    width: 1303px
    height: 216px
    top: 0
    left: 50%
    margin-left: -(1303px / 2) - 50px

.title
  text-align: left
  font-size: 3em
  line-height: 1.3
  font-weight: 500
  padding-left: 98px

  @media (max-width $breakpoint-lg - 1)
    padding-left: 0

  @media (max-width $breakpoint-sm - 1)
    font-size: 2em

.under
  display: inline-block
  border-bottom: 6px solid scarlet
  margin-bottom: 8px

.item
  position: relative
  padding-left: 95px
  font-weight 300
  margin-bottom: 20px

  &:before
    content: ''
    display: block
    position: absolute
    top: 8px
    left: 55px
    width: 11px
    height: 11px
    border-radius: 50%
    background-color white-three

  @media (max-width: $breakpoint-lg - 1)
    padding-left: 50px
    &:before
      left: 20px

  @media (max-width $breakpoint-md - 1)
    padding-left: 32px
    &:before
      left: 8px
