.container
  background-color greyish-brown
  color white
  padding: 50px 0 60px

.title
  font-size: 3em
  margin-bottom: 10px
  text-align: center

  @media (max-width: $breakpoint-sm - 1)
    font-size: 2em

.subtitle
  font-weight: 300
  margin-bottom: 50px
  text-align: center

.icon
  margin: 0 auto
  width: 107px
  height: 107px
  background-color black-two
  position: relative
  border-radius: 50%

  &:before
    content: ''
    display: block
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.icon-1:before
  background: url(sprites/sprite-delivery-1.svg)
.icon-2:before
  background: url(sprites/sprite-delivery-2.svg)
.icon-3:before
  background: url(sprites/sprite-delivery-3.svg)
.icon-4:before
  background: url(sprites/sprite-delivery-4.svg)

.number
  font-size: 1.5em
  position: relative
  z-index: 1

  &:before, &:after
    content: ''
    display: block
    position: absolute
    z-index: -1

  &:after
    background-color greyish-brown
    width: 40px
    height: 100%
    left: 0
    top: 0

  &:before
    top: 50%
    margin-top: -1px
    left: 0
    width: 100%
    height: 2px
    background-color greyish-brown-three

.text
  margin-top: 15px
  font-weight 300

  @media (max-width: $breakpoint-sm)
    margin-top: 3px
    margin-bottom: 20px

.button
  margin-top: 20px